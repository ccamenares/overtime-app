<div>
	<h2><%= @post.rationale %></h2>
</div>

<div class='form-horizontal'>
	<div class="form-group well">
		<div>
			<h3> <span>Daily Hours Worked: </span><%= @post.daily_hours %></h3>
		</div>

		<div>
			<h3> <span>Employee: </span><%= @post.user.full_name %></h3>
		</div>

		<div>
			<h3> <span>Date: </span><%= @post.date %></h3>
		</div>

		<div>
			<h3> <span>Current Stage of Approval: </span><%= @post.status %></h3>
		</div>
	</div>
	<div class='form-group'>
		<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary btn-block' if policy(@post).update? %>
	</div>
</div>


